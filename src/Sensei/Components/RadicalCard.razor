@using Sensei.Data

<div class="flip-card">
    <div class="flip-card-inner" style=@(flipped ? "transform: rotateY(180deg);" : "")>
        <div class="flip-card-front" @onclick="() => flip()">
            <h2 class="display-5 mt-2">@radical</h2>
            <a href="radical/@radical" class="text-light fs-1">...</a>
        </div>
        <div class="flip-card-back" @onclick="() => flip()">
            @kana
        </div>
    </div>
</div>

@code {
    [Parameter] 
    public string radical { get; set; }
    [Parameter]
    public string kana { get; set; }
    [Parameter]
    public bool flipped { get; set; }

    public async Task flip()
    {
        flipped = !flipped;
        await Task.Delay(100);
    }
}
