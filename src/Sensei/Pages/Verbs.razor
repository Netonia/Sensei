                        <td><Speaker text="@_causativePassiveNegative" showPlayButton="@showPlayButton" showRomaji="true" /></td>
                    </tr>
                    <tr>
                        <th>Potential</th>
                        <td><Speaker text="@_potentialAffirmative" showPlayButton="@showPlayButton" showRomaji="true" /></td>
                        <td><Speaker text="@_potentialNegative" showPlayButton="@showPlayButton" showRomaji="true" /></td>
                    </tr>
                    <tr>
                        <th>Te Form</th>
                        <td><Speaker text="@_teFormAffirmative" showPlayButton="@showPlayButton" showRomaji="true" /></td>
                        <td><Speaker text="@_teFormNegative" showPlayButton="@showPlayButton" showRomaji="true" /></td>
