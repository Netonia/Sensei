            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th>Form</th>
                        <th>Affirmative</th>
                        <th>Negative</th>
                    </tr>
                    <tr>
                        <th>Non-Past</th>
                        <td><Speaker text="@_nonPastAffirmative" showPlayButton="@showPlayButton" showRomaji="true" /></td>
                        <td><Speaker text="@_nonPastNegative" showPlayButton="@showPlayButton" showRomaji="true" /></td>
                    </tr>
                    <tr>
                        <th>Non-Past Polite</th>
