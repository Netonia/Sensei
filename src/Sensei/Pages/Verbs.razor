@code
{
    private bool showPlayButton = true;
    private string _verb = "行く";
    private string _pronounciation = "いく";

    private string _nonPastAffirmative;
    private string _nonPastPoliteAffirmative;
    private string _pastAffirmative;
    private string _pastPoliteAffirmative;
    private string _teFormAffirmative;
    private string _potentialAffirmative;
    private string _passiveAffirmative;
    private string _causativeAffirmative;
    private string _causativePassiveAffirmative;
    private string _imperativeAffirmative;
    private string _nonPastNegative;
    private string _nonPastPoliteNegative;
    private string _pastNegative;
    private string _pastPoliteNegative;
    private string _teFormNegative;
    private string _potentialNegative;
    private string _passiveNegative;
    private string _causativeNegative;
    private string _causativePassiveNegative;
    private string _imperativeNegative;

    private string _transliteration;

    private async void Conjugate()
    {
        var conj = Conjugator.Conjugate(_verb, _pronounciation);

        if (conj != null)
        {
            _nonPastAffirmative = $"{conj.NonPast.Affirmative}";
            _nonPastPoliteAffirmative = $"{conj.NonPastPolite.Affirmative}";
            _pastAffirmative = $"{conj.Past.Affirmative}";
            _pastPoliteAffirmative = $"{conj.PastPolite.Affirmative}";
            _teFormAffirmative = $"{conj.TeForm.Affirmative}";
            _potentialAffirmative = $"{conj.Potential.Affirmative}";
            _passiveAffirmative = $"{conj.Passive.Affirmative}";
            _causativeAffirmative = $"{conj.Causative.Affirmative}";
            _causativePassiveAffirmative = $"{conj.CausativePassive.Affirmative}";
            _imperativeAffirmative = $"{conj.Imperative.Affirmative}";

            _nonPastNegative = $"{conj.NonPast.Negative}";
            _nonPastPoliteNegative = $"{conj.NonPastPolite.Negative}";
            _pastNegative = $"{conj.Past.Negative}";
            _pastPoliteNegative = $"{conj.PastPolite.Negative}";
            _teFormNegative = $"{conj.TeForm.Negative}";
            _potentialNegative = $"{conj.Potential.Negative}";
            _passiveNegative = $"{conj.Passive.Negative}";
            _causativeNegative = $"{conj.Causative.Negative}";
            _causativePassiveNegative = $"{conj.CausativePassive.Negative}";
            _imperativeNegative = $"{conj.Imperative.Negative}";
        }

        StateHasChanged();
    }
}
