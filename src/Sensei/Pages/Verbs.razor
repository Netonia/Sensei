@page "/verbs"
@using Sensei.Components
@using Doushi

<PageTitle>Verbs</PageTitle>

<h1>Verbs</h1>

<div class="row">
    <div class="col-4">
        <div>
            <input type="text" class="form-control" @bind="_verb" />
            <br />
